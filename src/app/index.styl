.meetups
  h2
    font-size 1.3rem
    font-weight: bold
    margin-bottom: 0.5em

    // span
    // display inline-block
    // margin-left 1rem
    font-size 0.8rem

meetups
  overflow hidden

  h3
    font-weight normal
    font-size 2.2rem
    margin: 0;
    // border-bottom: 1px #ddd solid;
    padding: 1rem 0;

  .tag
    display: inline-block;
    background: #cf0d19;
    padding: 4px 8px;
    border-radius: 3px;
    color: #fff;
    font-size: 0.7rem;
    font-weight: bold;
    line-height: 1rem;
    vertical-align: middle;
    margin-left: 0.5rem;

    &.past
      background: #999

  .attendees
    display: block
    font-size 0.9rem
    margin-top 0.5rem
    font-weight normal

    a
      text-decoration underline

