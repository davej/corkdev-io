@import "kouto-swiss"

normalize()
box-sizing-reset()

html
  // border-top: 4px #CF0D19 solid;

body
  // background #f5f5f5

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

a
  text-decoration none
  color #CF0D19


.intro
  background: #CF0D19;
  padding: 10px;
  border-bottom: 2px #330306 solid;
  color: white
  // position: fixed
  // width: 100%

section
  margin-bottom: 0.5rem;
  border-bottom 3px #CF0D19 solid
  overflow hidden

.wrapper
  max-width 980px
  width 94%
  margin 0 auto

.main-header
  width 15%
  max-width 147px
  position fixed
  margin-top 1rem
  top 0

  h1
    margin 0

  img
    max-width 100%

  ul
    list-style: none;
    padding: 0;
    text-align: center;

  li
    color: #CF0D19;
    font-weight: bold;
    padding: 10px 0;
    font-size: 1.3rem

.content
  margin-left 20%

h2
  font-weight lighter
  font-size 1.4rem

